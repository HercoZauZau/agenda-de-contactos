<%- include('includes/head') %>
  <%- include('includes/navbar.ejs') %>

    <div class="container mt-5">
      <div class="col-lg-5 border rounded p-3 m-auto">

        <% if (contacto._id) { %>
          <h1 class="text-center mb-5">Editar contacto</h1>

          <%- include('includes/messages') %>

            <form action="/contacto/edit/ <%= contacto._id %>" method="post">

              <% } else { %>

                <h1 class="text-center mb-5">Registar contacto</h1>

                <%- include('includes/messages') %>

                  <form action="/contacto/register" method="post">

                    <% } %>

                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                      <div class="form-group">
                        <label>Nome</label>
                        <input value="<%= contacto.name %>" type="text" class="form-control" name="name" />
                      </div>
                      <div class="form-group">
                        <label>Sobrenome</label>
                        <input value="<%= contacto.lastname %>" type="text" class="form-control" name="lastname" />
                      </div>
                      <div class="form-group">
                        <label>Email</label>
                        <input value="<%= contacto.email %>" type="email" class="form-control" name="email" />
                      </div>
                      <div class="form-group">
                        <label>Telefone</label>
                        <input value="<%= contacto.number %>" type="tel" class="form-control" name="number" />
                      </div>
                      <div class="mt-5">
                        <button type="submit" class="btn w-25 btn-primary ">Gravar</button>
                        <a href="/contacto/list" class="btn btn-danger">Cancelar </a>
                      </div>
                  </form>
      </div>
    </div>

    <%- include('includes/footer') %>