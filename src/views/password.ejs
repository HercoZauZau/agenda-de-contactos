<%- include('includes/head') %>
  <%- include('includes/navbar.ejs') %>

    <div class="container">
      <div class="row p-5">
        <div class="col-lg-2"></div>
        <div class="col-lg-5 m-auto border rounded p-3">
          <h1 class="text-center mb-5">Alterar senha</h1>

          <%- include('includes/messages') %>

            <form action="/password/edit/ <%= id %>" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <div class="form-group">
                <label>Senha actual</label>
                <input type="password" class="form-control" name="oldpassword" />
              </div>
              <div class="form-group">
                <label>Nova senha</label>
                <input type="password" class="form-control" name="newpassword" />
              </div>
              <div class="form-group">
                <label>Confirmar nova senha</label>
                <input type="password" class="form-control" name="checkpassword" />
              </div>
              <div class="mt-5">
                <button type="submit" class="btn btn-primary">Submeter</button>
                <a href="/contacto/list" class="btn btn-danger">Cancelar </a>
              </div>
            </form>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>